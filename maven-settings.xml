<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <!--
      CI/sandbox friendly settings:
      - keep mirror id "alimaven" (matches pre-populated /root/.m2 tracking files)
      - use HTTPS Central URL to avoid http blockers / DNS issues
      - the local repository is provided via -Dmaven.repo.local
    -->
    <mirrors>
        <mirror>
            <id>alimaven</id>
            <mirrorOf>central</mirrorOf>
            <name>Central (keep alimaven id)</name>
            <url>https://repo.maven.apache.org/maven2</url>
        </mirror>
    </mirrors>
</settings>
