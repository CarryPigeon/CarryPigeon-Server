<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 https://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>dist</id>
    <formats>
        <format>dir</format>  <!-- 同时支持zip格式 -->
        <format>zip</format>
    </formats>

    <!-- 项目模块输出到modules目录 -->
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>CarryPigeon:api</include>
                <include>CarryPigeon:common</include>
                <include>CarryPigeon:dao</include>
                <include>CarryPigeon:chat-domain</include>
                <include>CarryPigeon:connection</include>
                <include>CarryPigeon:external-service</include>
            </includes>
            <binaries>
                <outputDirectory>module</outputDirectory>
                <unpack>false</unpack>
                <includes>
                    <include>*.jar</include>
                </includes>
            </binaries>
        </moduleSet>
    </moduleSets>

    <!-- 第三方依赖输出到lib目录 -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>libs</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact> <!-- 不包含项目自身 -->
            <scope>runtime</scope> <!-- 包含运行时依赖 -->
            <unpack>false</unpack>
            <excludes>
                <exclude>CarryPigeon:*</exclude> <!-- 排除本项目模块 -->
            </excludes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../application-starter/target</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>application-starter-*.jar</include>
            </includes>
            <excludes>
                <exclude>*-exec.jar</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/../application-starter/src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>application.yaml</include>
                <include>log4j2_config.xml</include>
                <include>mybatis-config.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../application-starter/src/main/resources/config</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
